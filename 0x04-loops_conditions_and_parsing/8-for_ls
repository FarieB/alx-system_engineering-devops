#!/usr/bin/env bash
# This script lists files in the current directory, showing only the part after the first dash

# Iterate over each file in the current directory (excluding hidden files)
for file in *; do
    # Check if the file is not hidden (doesn't start with a dot)
    if [[ ! "$file" =~ ^\. ]]; then
        # Extract the part of the filename after the first dash
        name="${file#*-}"  # Removes everything up to the first dash
        echo "$name"
    fi
done

